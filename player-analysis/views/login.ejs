<%- include('partials/header') %>

<div class="form-container">
    <h2><text  style=" font-weight: bold; font-size: 30px;color: white">Login </text></h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <form method="post">
	   
	   <div class="form-group">
            <label for="username"><text  style=" font-weight: bold; font-size: 15px;color: white">Username</text></label>
            <input type="text" name="username" id="username" value="<%= locals.username || '' %>" class="form-control" />
        </div>
		<div>&nbsp;</div>
        <div class="form-group">
            <label for="password"><text  style=" font-weight: bold; font-size: 15px;color: white">Password</text></label>
            <input type="password" name="password" id="password" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/register" class="btn btn-link"><text  style=" font-weight: bold; font-size: 15px;color: white">Register</text></a>
        </div>
		
        
    </form>
</div>
<%- include('partials/footer') %>